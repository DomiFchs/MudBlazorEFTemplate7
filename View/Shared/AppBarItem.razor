<MudButton StartIcon="@StartIcon" Color="Color.Inherit" Class="h-100 px-3" OnClick="Execute" Href="@Href">@Text</MudButton>

@code {

    [Parameter]
    public string Text { get; set; } = "";

    [Parameter]
    public string? StartIcon { get; set; }

    [Parameter]
    public Func<Task>? OnClick { get; set; }

    [Parameter]
    public string? Href { get; set; }

    private async Task Execute() {
        if (OnClick != null) await OnClick.Invoke();
    }

}